@model IEnumerable<客戶聯絡人>

@{
    Layout = "";
}

@using (Html.BeginForm("List", "客戶聯絡人", FormMethod.Post))
{

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
    </tr>
@{ 
    var Customers = Model.ToArray();
}
@for (int i = 0; i < Customers.Length; i++)
{
    <tr>
        <td>
            @Html.HiddenFor(modelItem => Customers[i].Id)
            @Html.EditorFor(modelItem => Customers[i].職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Customers[i].姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Customers[i].Email)
        </td>
        <td>
            @Html.EditorFor(modelItem => Customers[i].手機)
        </td>
        <td>
            @Html.EditorFor(modelItem => Customers[i].電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Customers[i].客戶資料.客戶名稱)
        </td>
    </tr>
}

   
</table>
    @Html.Hidden("CustomerId",ViewData["CustomerId"])
<button class="btn btn-primary" type="submit">批次更新</button>
}